# Gemini API Configuration
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL=gemini-2.5-flash

# VectorDB Configuration
VECTORDB_TYPE=chromadb  # chromadb (dev) or pinecone (prod)
CHROMA_PATH=./chroma_data
CHROMA_COLLECTION=novel_passages

# Pinecone Configuration (for production)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=gaji-ai-vectors

# Redis Configuration (Celery broker + Long Polling)
REDIS_URL=redis://localhost:6379

# Spring Boot Configuration (for callbacks)
SPRING_BOOT_URL=http://localhost:8080

# Application Configuration
APP_ENV=development
PORT=8000
LOG_LEVEL=INFO
